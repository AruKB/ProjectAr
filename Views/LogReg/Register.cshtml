@model project.Models.Users
@{
    ViewData["Title"] = "Register";
}
    <br/><br/> 
    <form asp-action="Register" method="Post">
        <div class="form-horizontal">
            <div class="row">
                <div class="form-group">
                    <label asp-for="Users_Name" name="Name"
                    class="col-lg-2 col-sm-3 control-label"></label>
                    <div class="col-lg-3">
                        <input asp-for="Users_Name"
                        class="form-control"/>
                        <span asp-validation-for="Users_Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                <label asp-for="Users_Logins" class="col-lg-2 col-sm-3 control-label"></label>
                <div class="col-lg-3">
                    <input asp-for="Users_Logins"
                    class="form-control"/>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Users_Password"
                class="col-lg-2 col-sm-3 control-label">
                </label>
                <div class="col-lg-3">
                    <input type="password"
                    asp-for="Users_Password" class="form-control"/>
                </div>
            </div>
        </div>
    </div>
    <input type="submit" value="Register"
    class="col-lg-2 col-md-offset-2 btn btn-success"/><br/>
    </form>

